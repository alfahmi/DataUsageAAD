<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Define the background properties like color etc -->
    <item android:id="@android:id/background">
		<shape>
			<gradient
                android:startColor="#FF404142"
                android:centerColor="#FF404142"
                android:centerY="1.0"
                android:endColor="#FF404142"
                android:angle="270"
			/>
		</shape>
	</item>

	<!-- Define the progress properties like start color, end color etc -->
	<item android:id="@android:id/progress">
		<clip>
			<shape>
				<gradient
					android:startColor="@color/alfahmi__red"
					android:centerColor="@color/alfahmi__red"
					android:centerY="1.0"
					android:endColor="#FF404142"
					android:angle="270"
				/>
			</shape>
		</clip>
    </item>
</layer-list> 
