<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="@dimen/alfahmi__header_height"
	android:background="@color/alfahmi__header">
	<ImageView
		android:layout_width="match_parent"
		android:layout_height="@dimen/alfahmi__header_height"
		android:src="@drawable/alfahmi__maps"
		android:scaleType="centerCrop"/>
	
	<LinearLayout
		android:id="@+id/bgtitle"
		android:gravity="center"
		android:orientation="vertical"
		android:layout_height="@dimen/alfahmi__header_height"
		android:layout_width="fill_parent">
		
		<TextView
			android:id="@+id/alfahmi__title_text"
			android:textSize="@dimen/alfahmi__title_text_size"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:textColor="@color/alfahmi__textPrimary_color" />

		<TextView
			android:id="@+id/alfahmi__subtitle_text"
			android:textSize="@dimen/alfahmi__subtitle_text_size"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:textColor="@color/alfahmi__textPrimary_color" />
	</LinearLayout>
	
</RelativeLayout>
